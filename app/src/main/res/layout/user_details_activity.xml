<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/head"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/userInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageHolder">

                <TextView
                    android:id="@+id/title"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="19dp"
                    android:layout_marginTop="15dp"
                    android:text="Mr"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/firstName"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/title"
                    android:layout_alignBottom="@+id/title"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/title"
                    android:layout_toRightOf="@+id/title"
                    android:text="Walter"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lastName"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/email"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp"
                    android:layout_toEndOf="@+id/firstName"
                    android:layout_toRightOf="@+id/firstName"
                    android:text="White"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/title"
                    android:layout_alignStart="@+id/title"
                    android:layout_below="@+id/title"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="4dp"
                    android:text="walter.white@gmail.com"
                    android:textSize="17dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/informationlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/userInfo">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/information"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:padding="4dp"
                    android:text="@string/information"
                    android:textSize="17dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_call_black_36dp"
                    android:id="@+id/callImage"
                    android:layout_marginRight="63dp"
                    android:layout_marginEnd="63dp"
                    android:layout_alignTop="@+id/information"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_message_black_36dp"
                    android:id="@+id/smsImage"
                    android:layout_alignTop="@+id/callImage"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginEnd="13dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/details"
                android:padding="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/informationlayout">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:background="@android:color/black" />

                <TextView
                    android:id="@+id/username"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:text="USERNAME"
                    android:textSize="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:id="@+id/postcode"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/street"
                    android:layout_alignStart="@+id/street"
                    android:layout_below="@+id/street"
                    android:textSize="17dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/postcode" />

                <TextView
                    android:id="@+id/textView22"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/postcode"
                    android:layout_alignStart="@+id/postcode"
                    android:layout_below="@+id/postcode"
                    android:textSize="17dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/nationality" />

                <TextView
                    android:id="@+id/phone"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView22"
                    android:layout_alignStart="@+id/textView22"
                    android:layout_below="@+id/textView22"
                    android:textSize="17dp"
                    android:layout_marginTop="11dp"
                    android:text="@string/phoneNumber" />

                <TextView
                    android:id="@+id/streetinfo"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/street"
                    android:layout_alignBottom="@+id/street"
                    android:layout_toEndOf="@+id/street"
                    android:layout_toRightOf="@+id/street"
                    android:textSize="17dp"
                    android:text="Stiv Naumov 79" />

                <TextView
                    android:id="@+id/nationality"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="Macedonia"
                    android:layout_above="@+id/phone" />

                <TextView
                    android:id="@+id/phoneNumber"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="+38976796375"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/phone"
                    android:layout_toEndOf="@+id/phone" />

                <TextView
                    android:id="@+id/street"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:textSize="17dp"
                    android:text="@string/street"
                    android:layout_below="@+id/username"
                    android:layout_alignLeft="@+id/username"
                    android:layout_alignStart="@+id/username" />

                <TextView
                    android:id="@+id/postcodeInfo"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:text="7000"
                    android:layout_above="@+id/textView22"
                    android:layout_toEndOf="@+id/postcode" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/imageHolder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:transitionName="profile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@mipmap/ic_profile" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>